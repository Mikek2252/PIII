<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<GridPane xmlns:fx="http://javafx.com/fxml/1" alignment="CENTER" hgap="10.0" vgap="10.0"
          fx:controller="ku.piii.musictableviewfxml.FXMLController">
    <padding>
        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
    </padding> 
    <Label  text="Music Collection"                
           GridPane.columnIndex="0" GridPane.rowIndex="0" fx:id="addressBook">
    </Label>
    
    
    <GridPane  GridPane.columnIndex="0"
            GridPane.rowIndex="1"
            GridPane.hgrow="always"
            GridPane.vgrow="always">
        <columnConstraints >
            <ColumnConstraints minWidth="150" maxWidth="150" prefWidth="150"/>
        </columnConstraints>
        <GridPane GridPane.columnIndex="0" >
            <Label styleClass="title" text="Playlists"
                alignment="CENTER"
                prefWidth="150" 
                GridPane.rowIndex="0" >
            </Label>
            <ListView fx:id="listView" 
                GridPane.rowIndex="1">
            </ListView>
            <Button GridPane.rowIndex="3" text="Create Playlist" onAction="#createPlaylistAction" fx:id="playlist" />
        </GridPane> 
        
        <TableView fx:id="tableView" 
           GridPane.columnIndex="1" 
           GridPane.hgrow="always"
           GridPane.vgrow="always">
        </TableView>
        
    </GridPane>

    <Button GridPane.rowIndex="2" text="Click Me!" onAction="#handleButtonAction" fx:id="button" />
    
  
    <MenuBar fx:id="menuBar" onKeyPressed="#handleKeyInput">
        <menus>
            <Menu text="File">
                <items>
                    <MenuItem text="New"/>
                    <MenuItem text="Open"/>
                    <MenuItem text="Save"/>
                    <MenuItem text="Save As"/>
                    <SeparatorMenuItem  />
                    <MenuItem text="Exit"/>
                </items>
            </Menu>
            <Menu text="Edit">
                <items>
                    <MenuItem text="Copy"/>
                    <MenuItem text="Cut"/>
                    <MenuItem text="Paste"/>
                </items>
            </Menu>
            <Menu text="Help">
                <items>
                    <MenuItem text="Search" disable="true"/>
                    <MenuItem text="Online Manual" visible="false"/>
                    <SeparatorMenuItem />
                    <MenuItem text="About" onAction="#handleAboutAction"/>
                </items>
            </Menu>
        </menus>
    </MenuBar>

</GridPane>